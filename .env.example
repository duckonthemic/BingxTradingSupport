# ===========================================
# BingX Zone Alert Bot - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# --- Redis Configuration ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# --- Telegram Configuration ---
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Your Telegram user ID or group chat ID
TELEGRAM_CHAT_ID=your_chat_id_here

# --- BingX API Configuration ---
# Public endpoints (no API key needed)
BINGX_WS_URL=wss://open-api-ws.bingx.com/market
BINGX_REST_URL=https://open-api.bingx.com

# --- Volume Filter Settings ---
# Minimum 24h volume in USD (filter out low liquidity)
MIN_VOLUME_24H=50000
# Maximum 24h volume in USD (filter out large caps)
MAX_VOLUME_24H=50000000
# Mid cap threshold for categorization
MID_CAP_THRESHOLD=5000000

# --- Zone Detection Thresholds ---
RESISTANCE_PROXIMITY=0.01
SUPPORT_PROXIMITY=0.01
BB_SQUEEZE_THRESHOLD=0.05
VOLUME_SPIKE_MULTIPLIER=4.0
VOLUME_SURGE_MULTIPLIER=2.0
ADX_TREND_THRESHOLD=25
RSI_OVERBOUGHT=75
RSI_OVERSOLD=40

# --- Technical Indicator Settings ---
EMA_FAST=34
EMA_SLOW=89
RSI_PERIOD=14
BB_PERIOD=20
BB_STD=2.0
ADX_PERIOD=14
ATR_PERIOD=14
VOLUME_LOOKBACK=20

# --- Timing Settings (in seconds) ---
CONTEXT_UPDATE_INTERVAL=30
PRIORITY_1_COOLDOWN=1800
PRIORITY_2_BATCH_INTERVAL=300
DIFFERENT_ZONE_COOLDOWN=600

# --- Application Settings ---
LOG_LEVEL=INFO
DEBUG=false
